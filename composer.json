{
    "name": "chasdevs/avro-parser",
    "description": "A lightweight PHP library for parsing Avro .avsc strings into representative objects. Used in chasdevs/avro-to-php.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "chasdevs",
            "email": "chasdevs@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "myclabs/php-enum": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "AvroParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    },
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.2"
    },
    "scripts": {
        "test": "vendor/bin/phpunit test"
    }
}
